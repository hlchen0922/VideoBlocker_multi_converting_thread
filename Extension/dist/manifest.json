{
    "name": "Online Video Blocker",
    "version": "1.0",
    "background": {
        "scripts" : ["ext_background.js"],
        "persistent": true
    },
    "browser_action":{        
        "default_title": "Configure Your Video Blocker"
    },    
    "permissions": [
        "tabs",
        "activeTab",
        "sessions",
        "storage",
        "unlimitedStorage",
        "<all_urls>",
        "clipboardRead",
        "downloads",
        "webRequest",
        "webRequestBlocking"
      ],    
    "manifest_version": 2
}